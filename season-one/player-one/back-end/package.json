{
  "name": "player-one",
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc --build tsconfig.json",
    "start:local": "nodemon --watch 'src/**/*' -e ts --exec 'ts-node' ./src/server.ts",
    "test:local": "npm run build && mongo code-kombat-test --eval \"db.dropDatabase()\" && npm run test:cucumber",
    "test:cucumber": "DB_URI=mongodb://localhost/code-kombat cucumber-js --require ./test ./test/features --exit"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "cors": "^2.8.5",
    "express": "4.18.2",
    "glob": "7.1.5",
    "helmet": "3.21.1",
    "mongoose": "5.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "4.17.1",
    "@types/glob": "7.1.1",
    "@types/helmet": "0.0.44",
    "@types/mongoose": "^5.5.22",
    "chai": "4.2.0",
    "cucumber": "6.0.2",
    "nock": "11.4.0",
    "nodemon": "1.19.4",
    "supertest": "4.0.2",
    "ts-node": "8.4.1",
    "typescript": "3.6.4"
  }
}
